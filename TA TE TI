#include <stdio.h>

char tablero[3][3]; // Tablero del juego

// Función para inicializar el tablero
void inicializarTablero() {
    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 3; j++) {
            tablero[i][j] = ' ';
        }
    }
}

// Función para imprimir el tablero
void imprimirTablero() {
    printf("\n");
    printf(" %c | %c | %c\n", tablero[0][0], tablero[0][1], tablero[0][2]);
    printf("---|---|---\n");
    printf(" %c | %c | %c\n", tablero[1][0], tablero[1][1], tablero[1][2]);
    printf("---|---|---\n");
    printf(" %c | %c | %c\n", tablero[2][0], tablero[2][1], tablero[2][2]);
    printf("\n");
}

// Función para verificar si hay un ganador
char verificarGanador() {
    // Verificar filas
    for (int i = 0; i < 3; i++) {
        if (tablero[i][0] == tablero[i][1] && tablero[i][1] == tablero[i][2] && tablero[i][0] != ' ')
            return tablero[i][0];
    }
    // Verificar columnas
    for (int j = 0; j < 3; j++) {
        if (tablero[0][j] == tablero[1][j] && tablero[1][j] == tablero[2][j] && tablero[0][j] != ' ')
            return tablero[0][j];
    }
    // Verificar diagonales
    if (tablero[0][0] == tablero[1][1] && tablero[1][1] == tablero[2][2] && tablero[0][0] != ' ')
        return tablero[0][0];
    if (tablero[0][2] == tablero[1][1] && tablero[1][1] == tablero[2][0] && tablero[0][2] != ' ')
        return tablero[0][2];
    
    // Si no hay ganador, se retorna un espacio en blanco
    return ' ';
}

// Función para realizar un movimiento
void hacerMovimiento(int fila, int columna, char jugador) {
    tablero[fila][columna] = jugador;
}

int main() {
    int fila, columna;
    char jugador = 'X';
    char ganador = ' ';

    // Inicializar el tablero
    inicializarTablero();

    // Ciclo principal del juego
    while (ganador == ' ') {
        // Imprimir el tablero
        imprimirTablero();

        // Pedir al jugador que ingrese su movimiento
        printf("Turno del jugador %c. Ingrese fila y columna (ejemplo: 1 2): ", jugador);
        scanf("%d %d", &fila, &columna);

        // Verificar si la casilla está vacía
        if (tablero[fila][columna] == ' ') {
            // Realizar el movimiento
            hacerMovimiento(fila, columna, jugador);

            // Verificar si hay un ganador
            ganador = verificarGanador();

            // Cambiar al siguiente jugador
            if (jugador == 'X')
                jugador = 'O';
            else
                jugador = 'X';
        } else {
            printf("La casilla ya está ocupada. Intenta de nuevo.\n");
        }
    }

    // Imprimir el resultado del juego
    imprimirTablero();
    if (ganador != ' ') {
        printf("¡El jugador %c ha ganado!\n", ganador);
    } else {
        printf("¡Empate!\n");
    }

    return 0;
}
