#include <stdio.h>
#include <stdlib.h>

int main(){
    int a = 0;
    int b = 0;
    int c = 0;
    int d = 0;
    int e = 0;
    
    printf("escribe la nota de tu primera prueba: ");
      scanf("%d", &a);                        
         printf("\n");
    printf("escribe la nota de tu segunda prueba: ");
      scanf("%d", &b);                        
         printf("\n");
    printf("escribe la nota de tu tercera prueba: ");
      scanf("%d", &c);                        
         printf("\n");
    printf("escribe la nota de tu cuarta prueba: ");
      scanf("%d", &d);                        
         printf("\n");
    printf("escribe la nota de tu tarea: ");
      scanf("%d", &e);                        
         printf("\n");

    int promedio = (a + b + c + d + e)/5;

    if(promedio >= 6){
        printf("el alumno aprobo");
    }
    else if(promedio < 6){
        printf("el alumno reprobo");
    }
}
