#include <stdio.h>
#include <stdlib.h>

int main(){
    int a = 0;
    int s = 0;
    int m = 0;
    int h = 0;

      printf("escribe un numero: ");
      scanf("%d", &a);                        
         printf("\n");
      s = a;
      while(s >= 60){
        if(s >= 60){
            s = s - 60;
            m = m + 1;
            if(m >= 60){
                m = m -60;
                h = h + 1;
            }
        }
}
        printf("%d:%d:%d", h, m, s);
}
