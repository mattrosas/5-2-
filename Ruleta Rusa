    #include <stdio.h>
    #include <stdlib.h>
    #include <time.h>

    void juego(int bala, int cpu, int cpuv, int jugador, int jugadorv){
    while(1){
        if(cpuv == 0){
        puts("El rival murio ¡Felicidades has sobrevivido!");
        break;
    }
    else if(jugadorv == 0){
        puts("Moriste ¡Que mala suerte, has perdido!");
        break;
    }
        puts("¿Quieres dispararle al rival(1) o a ti mismo(2)?");
        scanf("%d", &jugador);
        bala = rand() % 2;

        if(jugador == 1){
            puts("Le disparaste al rival");
            if(bala == 1){
                puts("La bala es verdadera, el rival pierde una vida");
                cpuv = cpuv - 1;
            }
            else if(bala == 0){
                puts("La bala es falsa");
            }
        }
        else if(jugador == 2){
            puts("Te disparaste a ti mismo");
            if(bala == 1){
                puts("La bala es verdadera, pierdes una vida");
                jugadorv = jugadorv - 1;
                juego(bala, cpu, cpuv, jugador, jugadorv);
            }
            else if(bala == 0){
                puts("La bala es falsa");
                juego(bala, cpu, cpuv, jugador, jugadorv);
            }
        }

        puts("Esperando a tu rival");
        puts(".");
        puts(".");
        puts(".");

        cpu = rand() % 5;
        if(jugador == 0){
            puts("Tu rival se disparo a si mismo");
            if(bala == 1){
                puts("La bala es verdadera, tu rival pierde una vida");
                jugadorv = jugadorv - 1;
                juego(bala, cpu, cpuv, jugador, jugadorv);
            }
            else if(bala == 0){
                puts("La bala es falsa");
                juego(bala, cpu, cpuv, jugador, jugadorv);
            }
    }else{
            puts("Tu rival te disparo");
            if(bala == 1){
                puts("La bala es verdadera, pierdes una vida");
                jugadorv = jugadorv - 1;  
            }
            else if(bala == 0){
                puts("La bala es falsa");
            }
        }
        if(cpuv == 0){
        puts("El rival murio ¡Felicidades has sobrevivido!");
        break;
    }
    else if(jugadorv == 0){
        puts("Has muerto");
        break;
    }
    }
    }

    int main() {
        srand(time(NULL));

        int bala;
        int cpu;
        int jugador;
        int cpuv = 3;
        int jugadorv = 3;
            
        juego(bala, cpu, cpuv, jugador, jugadorv);
        return 0;
    }
