#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(int argc, char *argv[]){
        int a;
          printf("inserta el numero de alumnos numero: ");
         scanf("%d", &a);                        //se ingresa el numero de alumnos
         printf("\n");
         if(a >= 100){
            printf("el costo de cada alumno es de $500");
         }
         else if(50 <= a && a <= 99){
            printf("el costo de cada alumno es de $400");
         }
         else if(30 <= a && a <= 49){
            printf("el costo de cada alumno es de $300");
         }
         else if(a <= 29){
            printf("se debera pagar $6000 por el micro");
         }
}
